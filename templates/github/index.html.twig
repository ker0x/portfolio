{% extends 'base.html.twig' %}

{% block body %}
    <main class="h-screen grid grid-cols-3 gap-4" id="swup">
        <div class="bg-gray-900 flex justify-center items-center" style="clip-path: polygon(0 0, 100% 0, 95% 100%, 0% 100%)">
            <svg class="h-32 w-32 fill-current text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                <path
                    d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
            </svg>
        </div>
        <div class="col-span-2 flex justify-center items-center p-10">
            <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
                {% for repository in repositories %}
                    <div class="flex p-4 border rounded border-gray-300">
                        <div class="flex-shrink flex items-center justify-center h-12 w-12 rounded-md bg-gray-700 text-white">
                            <svg class="h-6 w-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                            </svg>
                        </div>
                        <div class="ml-3 text-base text-gray-500">
                            <a class="block text-lg leading-6 font-semibold text-gray-900 mb-2" href="{{ repository.url }}" title="{{ repository.name }}"
                               target="_blank">{{ repository.name }}</a>
                            {{ repository.descriptionHTML|raw }}
                            <div class="flex mt-2">
                                {% for language in repository.languages.nodes %}
                                    <span class="border-2 rounded-full w-6 h-6 mr-1" style="background-color: {{ language.color }}"></span>
                                    <span>{{ language.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </dl>
        </div>
    </main>
{% endblock %}
